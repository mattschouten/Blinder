<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.cybadger.blinder</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/distraction-blocker</string>
    </array>

    <!-- Start at boot -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Keep it running - restart if it exits -->
    <key>KeepAlive</key>
    <!-- <true/> -->
    <false/>

    <!-- Throttle invocations of the program -->
    <key>ThrottleInterval</key>
    <integer>5</integer>  <!-- Five seconds between restart attempts -->
    <!-- This means that you can't toggle blind status faster than that -->

    <!-- Logging (helpful for debugging) -->
    <key>StandardOutPath</key>
    <string>/var/log/com.cybadger.blinder.log</string>
    <key>StandardErrorPath</key>
    <string>/var/log/com.cybadger.blinder-error.log</string>

    <key>WatchPaths</key>
    <array>
        <string>/tmp/com.cybadger.toggle-distractions.trigger</string>
    </array>
</dict>
</plist>
